<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuiItemFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/buy_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#4CFFD5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/buy_name"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="#67BEFF"
        android:text="name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy_image" />

    <TextView
        android:id="@+id/buy_price"
        android:layout_width="170dp"
        android:layout_height="33dp"
        android:layout_marginTop="30dp"
        android:background="#FF3939"
        android:text="price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy_name" />

    <TextView
        android:id="@+id/buy_desc"
        android:layout_width="377dp"
        android:layout_height="182dp"
        android:background="#80FF8C"
        android:text="desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy_price" />

    <Button
        android:id="@+id/Buy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy_desc" />

    <Button
        android:id="@+id/Buy_screen_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>